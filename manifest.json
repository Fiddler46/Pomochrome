{
    "manifest_version": 3,
    "name": "Pomodoro Manifest",
    "version": "1.0.0",
    "description": "A basic manifest for a pomodoro timer",
    "background": {
      "scripts": ["background.js"],
      "persistant": true
    },
    "action": {
        "default_popup": "popup.html"
      },
      "host_permissions": [
        "https://*/*",
        "http://*/*"
      ],
      "permissions": [
        "storage"
      ]
}    